<% provide(:title, "User #{@user.id}") %>
<h1>Record for <strong><%= @user.email %></strong></h1>

<p><small>(Last logged in on <%= @user.last_login.strftime('%B %d, %Y at %I:%M %p') %>)</small></p>

<% if @user.urls.size > 0 %>
	<table>
	  <tbody>
			<% @user.urls.each do |url| %>
				<%= render 'url' %>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<p>- Nothing to show -</p>
<% end %>

<%= link_to 'Back to Users', users_path %>
