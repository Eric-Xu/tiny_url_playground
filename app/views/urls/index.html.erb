<h1>Hello from Rails 4.0</h1>

<%= render "form" %>

<ul>
	<% for url in @urls %>
		<li>
			<%= link_to "lol.ly/#{url.converted_url}", "#{url.converted_url}", target: "_blank" %> |
			<%= url.lookup_acronyms %> |
			<%= url.original_url %> |
			<%= pluralize(url.page_view, "Page View") %> |
			ID (testing): <%= url.id %>
      <%= link_to 'Delete', url, method: :delete, data: { confirm: 'Are you sure?' } %>
		</li>
	<% end %>
</ul>

<%= link_to "New Url", new_url_path %> |
<%= link_to "All Users", users_path %>

<div>session[:url_ids] => <%= session[:url_ids].inspect %></div>
<div>session[:user_id] => <%= session[:user_id].inspect %></div>
<div>session[:auth_token] => <%= session[:auth_token].inspect %></div>
<div>cookies[:auth_token] => <%= cookies[:auth_token].inspect %></div>
<div>cookies.permanent[:auth_token] => <%= cookies.permanent[:auth_token].inspect %></div>