function createUrl() {
	$('#url_original_url').val('');
	$('#url_list').prepend('<%= escape_javascript(render @url) %>');
}

function prepTranslation() {
	var $newUrl = $('#url_list li:first');
	var $newUrlDefinitions = $newUrl.find('.definitions')
	var $newUrlButton = $newUrl.find('.translate')
	$newUrlDefinitions.hide();
	$newUrlButton.css('display', 'block');
	$newUrlButton.click(function() {
	  return $newUrlDefinitions.slideToggle();
	});
}

createUrl();
prepTranslation();