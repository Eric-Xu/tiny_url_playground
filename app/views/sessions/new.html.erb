<h1>Log In</h1>

<%= form_tag sessions_path do %>
	<div class="field">
		<%= text_field_tag :email, nil, placeholder: "Email", autofocus: true %>
	</div>
	<div class="field">
		<%= password_field_tag :password, nil, placeholder: "Password" %>
	</div>
	<div class="action">
		<%= submit_tag "Log In" %>
	</div>
<% end %>